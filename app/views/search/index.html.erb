Total Fire Benders: <%= @benders.count %><hr>

<% @benders.take(25).each do |bender| %>
  Name: <%= bender.name %><br>
  Image: <img src=<%= bender.photoUrl %>><br>
  Affiliations: <%= bender.affiliation %><br>
  Enemies: <% bender.enemies.each do |enemy| %>
    <%= enemy %><br>
  <% end %>
  Allies: <% bender.allies.each do |ally| %>
    <%= ally %><br>
  <% end %><hr>
<% end %>
